<% layout('layout/boilerplate') -%>
<div class="col-md-6 offset-md-3">
  <h1>Edit Project</h1>

  <form
    action="/project/<%= project.id %>/todo/<%= todo.id %>?_method=PUT"
    method="post"
    class="form-validation"
    novalidate
  >
    <div class="mb-3">
      <label class="form-label" for="title">Title</label>
      <input
        type="text"
        name="Todo[title]"
        id="title"
        class="form-control"
        value="<%= todo.title %>"
        required
      />
      <div class="valid-feedback">Looks good!</div>
    </div>

    <div class="mb-3">
      <label class="form-label" for="description"
        >Description about the todo</label
      >
      <textarea
        name="Todo[description]"
        id="description"
        cols="30"
        rows="10"
        class="form-control"
        required
      >
<%= todo.description %></textarea
      >
      <div class="valid-feedback">Looks good!</div>
    </div>

    <button class="btn btn-success">Submit</button>
  </form>
</div>

<a href="/project/<%= project.id %>/todo/<%= todo.id %>" class="btn btn-dark"
  >Back</a
>
