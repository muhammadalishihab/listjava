<% layout('layout/boilerplate') -%>
<div class="col-md-6 offset-md-3">
  <h1>Adding Project</h1>

  <form action="/project" method="post" class="form-validation" novalidate>
    <div class="mb-3">
      <label class="form-label" for="title">Title</label>
      <input
        type="text"
        name="Project[title]"
        id="title"
        class="form-control"
        required
      />
      <div class="valid-feedback">Looks good!</div>
    </div>

    <div class="mb-3">
      <label class="form-label" for="description"
        >Description about the project</label
      >
      <textarea
        name="Project[description]"
        id="description"
        cols="30"
        rows="10"
        class="form-control"
        required
      ></textarea>
      <div class="valid-feedback">Looks good!</div>
    </div>

    <button class="btn btn-success">Submit</button>
  </form>
</div>

<a href="/project" class="btn btn-dark">Back</a>
