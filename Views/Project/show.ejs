<% layout('layout/boilerplate') -%>
<h1>Project Name : <%= project.title %></h1>
<hr />
<h3>Summary</h3>
<p><%= project.description %></p>
<h6>Project created Date : <%= project.createdDate %></h6>
<a class="btn btn-secondary" href="/project/<%= project.id %>/edit">Edit</a>
<form
  action="/project/<%= project.id %>?_method=DELETE"
  method="post"
  class="d-inline"
>
  <button class="btn btn-danger">Delete</button>
</form>
<hr />

<a class="btn btn-primary" href="/project/<%= project.id %>/todo/new"
  >Add New Todo</a
>
<div class="row my-2">
  <div class="col-md-6">
    <h4>Pending Task</h4>
    <ol>
      <% for(let t of project.todos){ %> <% if(t.status === false) { %>
      <li>
        <%= t.title %>
        <a
          href="/project/<%= project.id %>/todo/<%= t.id %>"
          class="bi bi-eye-fill btn"
        ></a>
        <a
          href="/project/<%= project.id %>/todo/<%= t.id %>/edit"
          class="bi bi-pencil-square btn"
        ></a>
      </li>
      <% } %> <% } %>
    </ol>
  </div>
  <div class="col-md-6">
    <h4>Completed</h4>
    <ol>
      <% for(let t of project.todos){ %> <% if(t.status === true) { %>
      <li>
        <%= t.title %>
        <a
          href="/project/<%= project.id %>/todo/<%= t.id %>"
          class="bi bi-eye-fill btn"
        ></a>
        <a
          href="/project/<%= project.id %>/todo/<%= t.id %>/edit"
          class="bi bi-pencil-square btn"
        ></a>
      </li>
      <% } %> <% } %>
    </ol>
  </div>
</div>
<a href="/project" class="btn btn-dark">Back</a>
