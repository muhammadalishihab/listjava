<% layout('layout/boilerplate') -%>
<h1>All Projects</h1>

<a href="/project/new" class="btn btn-primary">Add new project</a>

<div class="m-2 row">
  <% for(let p of project){ %>
  <div class="card my-2 col-xl-3 col-lg-4 col-md-6 col-sm-12">
    <div class="card-body">
      <h5 class="card-title"><%= p.title %></h5>
      <p class="card-text"><%= p.description %></p>
      <a href="/project/<%= p.id %>" class="card-link btn btn-primary"
        >View Project</a
      >
    </div>
  </div>
  <% } %>
</div>
